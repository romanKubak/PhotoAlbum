{{#if superuser}}
<script defer src="/js/uploadAlbumPh.js"></script>
<main class="main">
  <div class="content-container">
    <div class="author-albums">
      
      <h3>Мои альбомы</h3>
      <form id="formFetch" method="POST" action="/upload" enctype="multipart/form-data">

        <div class="container">
          <h1>Добавление альбома</h1>
          <hr>
          <label for="psw"><b>Выбрать фото для заставки</b></label>
          <input type="file" name="images">
          <br>
          <br>

          <input type="text" placeholder="Название" name="title" required>
          <br>
          <br>

          <input type="text" placeholder="Описание" name="body" required>
          <br>
          <br>
          <br>
          <br>
          <button type="submit" class="registerbtn">Добавить</button>
          <hr>
        </div>
      </form>

      {{#each authorAlbums}}
      <div id="{{id}}" class="name-album">
        <h3>{{title}}</h3>
        <div class="preview-album" onclick="location.href='http://localhost:3000/album/{{id}}';">
          <img src="{{photo}}" alt="anyPhoto" width="300px" height="300px">
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>
{{/if}}
