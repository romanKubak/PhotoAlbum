{{#if superuser}}
<script defer src="/js/uploadAlbumPh.js"></script>
<main class="main">
  <div class="content-container">
    <div class="author-albums">

      <h3>Привет, {{superuser}}!</h3>

      <form id="formFetch" method="POST" action="/upload" enctype="multipart/form-data">

        <div class="container">
          <h1>Добавление альбома</h1>
          <hr>
          <br>
          <br>
          <label><b>Название альбома</b></label>
          <input type="text" placeholder="Название альбома" name="title" required>
          <br>
          <br>
          <label for="title"><b>Описание:</b></label>
          <input type="text" placeholder="Описание альбома" name="body" required>
          <br>
          <br>
          <label for="psw"><b>Выберете фото для загрузки</b></label>
          <input type="file" name="images">
          <br>
          <br>
          <button type="submit" class="registerbtn">Добавить</button>
          <hr>
        </div>
      </form>

      {{#each authorAlbums}}
      <div id="{{id}}" class="name-album">
        <h3>{{title}}</h3>
        <div class="preview-album" onclick="location.href='http://localhost:3000/album/{{id}}';">
          <img src="{{photo}}" alt="anyPhoto" width="300px" height="300px">
        </div>
      </div>
      {{/each}}
    </div>

    <br>
    <hr>
    <br>

    <div class="all-albums">
      <h3>Альбомы других пользователей</h3>
      {{#each allAlbums}}
      <div id="{{id}}" class="name-album">
        <h3>{{title}}</h3>
        <div class="preview-album" onclick="location.href='http://localhost:3000/album/{{id}}';">
          <img src="{{photo}}" alt="anyPhoto" width="300px" height="300px">
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>
{{/if}}


{{#unless superuser}}
<main class="main">
  <div class="content-container">
    <p class="mainDone">Для продолжения требуется авторизация</p> 
    </div>
    <a class="floating-button" href="/login">Войти</a>
    <a class="floating-button" href="/registration">Зарегистрироваться</a>
    
  
  <div class="divik">
  <span class="one"></span>
  <span class="two"></span>
  <span class="three"></span>
  <span class="four"></span>
 </div>
</main>

{{/unless}}
