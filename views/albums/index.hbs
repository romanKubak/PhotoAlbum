{{#if superuser}}
<script defer src="/js/uploadAlbumPh.js"></script>
<main class="main">
  <div class="content-container">
    <div class="author-albums">

      <h3>Привет, {{superuser}}!</h3>

      {{#each authorAlbums}}
      <div id="{{id}}" class="name-album">
        <h3>{{title}}</h3>
        <div class="preview-album" onclick="location.href='http://localhost:3000/album/{{id}}';">
          <img src="{{photo}}" alt="anyPhoto" width="300px" height="300px">
        </div>
      </div>
      {{/each}}
    </div>

    <br>
    <hr>
    <br>

    <div class="all-albums">
      <h3>Альбомы других пользователей</h3>
      {{#each allAlbums}}
      <div id="{{id}}" class="name-album">
        <h3>{{title}}</h3>
        <div class="preview-album" onclick="location.href='http://localhost:3000/album/{{id}}';">
          <img src="{{photo}}" alt="anyPhoto" width="300px" height="300px">
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</main>
{{/if}}


